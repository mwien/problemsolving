import util.Scanner;

public class EP {

    public static long[] EEA(long a, long b) {
	if(b == 0) {
	    long[] A = {a, 1, 0};
	    return A;
	}
	long[] B = EEA(b, a % b);
	long[] C = new long[3];
	C[0] = B[0];
	C[1] = B[2];
	C[2] = B[1] - (a / b) * B[2];
	return C;
    }

    public static void main(String[] args) {
	Scanner s = new Scanner(System.in);
	while(s.hasNext()) {
	    long a = s.nextInt();
	    long b = s.nextInt();
	    long[] C = EEA(a, b);
	    long D = C[0];
	    long X = C[1] % (a/D);
	    long Y = (D - a * X) / b;
	    System.out.println(X + " " + Y + " " + D);
	}
    }

}