#include<iostream>
#include<vector>

using namespace std;

int main()
{
    int N;
    cin >> N;
    vector<int> a;
    for(int i = 0; i < N: ++i) {
	int b;
	cin >> b;
	a.push_back(b);
    }
    sort(a.begin(), a.end());
    int md = 0;
    for(int i = 0; i < n-1; ++i) {
	md = min(md, a[i+1] - a[i]);
    }
    cout << md << endl;
    for(int i = 0; i < n; ++i) {
	bool pr = false;
	if(i > 0 && a[i] - a[i-1] == md) {
	    pr = true;
	}
	if(i < n-1 && a[i+1] - a[i] == md) {
	    pr = true;
	}
	if(pr) cout << a[i] << " ";
    }
    cout << endl;
}
